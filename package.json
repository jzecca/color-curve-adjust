{
  "name": "color-curve-adjust",
  "version": "2.0.0",
  "description": "Performs a Photoshop/GIMP curve adjustment on a RGB color",
  "license": "MIT",
  "repository": "jzecca/color-curve-adjust",
  "source": "src/index.ts",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "types": "dist/types.d.ts",
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "color",
    "curve",
    "adjust",
    "photoshop",
    "gimp"
  ],
  "dependencies": {
    "hex-rgb": "^4.3.0",
    "rgb-hex": "^3.0.0"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.0.0",
    "@parcel/transformer-typescript-tsc": "^2.0.0",
    "@parcel/transformer-typescript-types": "^2.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.0.0",
    "coveralls": "^3.1.0",
    "jest": "^27.3.0",
    "parcel": "^2.0.0",
    "ts-jest": "^27.0.0",
    "typescript": "^4.4.0"
  },
  "scripts": {
    "build": "parcel build src/index.ts",
    "watch": "parcel watch",
    "coverage": "jest --coverage",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": "src",
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "json"
    ],
    "testEnvironment": "node"
  }
